<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="position">
	<select id="getPositionById" resultType="positionvo" parameterType="positionvo">
	<![CDATA[
	select a.name, b.positionX, b.positionY,rpFlag,poiid from customer as a, customerPosition as b where a.code=b.code and id=#{id};
	]]>
	</select>
		<select id="getPosition" resultType="positionvo">
	<![CDATA[
	select a.name, b.positionX, b.positionY,rpFlag,poiid from customer as a, customerPosition as b where a.code=b.code;
	]]>
	</select>
	<insert id="insertPosition" parameterType="positionvo">
	<![CDATA[
	insert into customerPosition values(#{CustomerCode},#{PositionX},#{PositionY},#{rpFlag},#{poiid}); 
	]]>
	</insert>
	<update id="updatePostion" parameterType="positionvo">
	<![CDATA[
	update customerPosition set positionX=#{PositionX},positionY=#{PositionY},rpFlag=#{rpFlag},poiid=#{poiid} where code=#{CustomerCode}; 
	]]>
	</update>
	<delete id="deletePosition" parameterType="positionvo">
	<![CDATA[
	delete from customerPosition where code=#{CustomerCode};
	]]>
	</delete>
</mapper>
